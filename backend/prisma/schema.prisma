// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    first_name String 
    last_name String 
    email String @unique
    password String 
    is_admin Boolean @default(false)
    message Message[]
    comment Comment[]
    article Article[]
    note Note[]
}

model Message {
    id Int @id @default(autoincrement())
    user User @relation(fields: [user_id], references: [id])
    user_id Int
    title String
    image_url String
    description String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    comment Comment[]
}

model Comment {
    id Int @id @default(autoincrement())
    user User @relation(fields: [user_id], references: [id])
    user_id Int
    image_post Message @relation(fields: [image_id], references: [id])
    image_id Int
    commentary String
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

model Article {
      id Int @id @default(autoincrement())
      user User @relation(fields: [user_id], references: [id])
      user_id Int
      title String
      summary String
      content String
      created_at DateTime @default(now())
      updated_at DateTime @updatedAt
      comment Note[]
  }
  
  model Note {
      id Int @id @default(autoincrement())
      user User @relation(fields: [user_id], references: [id])
      user_id Int
      content Article @relation(fields: [content_id], references: [id])
      content_id Int
      note String
      created_at DateTime @default(now())
      updated_at DateTime @updatedAt
  }